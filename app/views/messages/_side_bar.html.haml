.side
  .side__header
    .side__header__info
      %h3.side__header__info__user-name
        = current_user.name
      %ul.side__header__info__icon
        %li.side__header__info__icon__create-chat
          =link_to new_group_path do
            =icon('fas','pen-square', class: 'icon')
        %li.side__header__info__icon__create-group
          =link_to edit_user_path(current_user) do
            =icon('fas','cog', class: 'icon')
  .side__groups
    - current_user.groups.each do |group|
      .group
        = link_to "#" do
          %p.group__name 
            = group.name
          %p.group__message 
            まだメッセージがありません
