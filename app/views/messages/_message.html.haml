.message
  .main-message
    .main-message__box
      = message.user.name
    .main__message__box__form
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__message__box__text
    - if message.content.present?
      %p.main__message__box__text__font
        = message.content
    = image_tag message.image.url, class: 'main__message__box__text__image' if message.image.present?